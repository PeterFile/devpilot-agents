{
  "version": "1.0",
  "install_dir": "~/.claude",
  "log_file": "install.log",
  "modules": {
    "orchestration": {
      "enabled": true,
      "description": "Multi-agent orchestration with Codex/Gemini workers",
      "operations": [
        {
          "type": "copy_dir",
          "source": "skills/multi-agent-orchestration",
          "target": "skills/multi-agent-orchestrator",
          "description": "Install orchestrator skill and scripts"
        },
        {
          "type": "copy_dir",
          "source": "multi-agent-orchestration/commands",
          "target": "commands",
          "description": "Install orchestration commands"
        },
        {
          "type": "run_command",
          "command": "bash install.sh",
          "description": "Install codeagent-wrapper binary",
          "env": {
            "INSTALL_DIR": "${install_dir}"
          }
        }
      ]
    },
    "skills": {
      "enabled": true,
      "description": "Install additional skills (kiro-specs, TDD)",
      "operations": [
        {
          "type": "copy_dir",
          "source": "skills/kiro-specs",
          "target": "skills/kiro-specs",
          "description": "Install kiro-specs skill"
        },
        {
          "type": "copy_dir",
          "source": "skills/test-driven-development",
          "target": "skills/test-driven-development",
          "description": "Install TDD skill"
        }
      ]
    },
    "agents": {
      "enabled": true,
      "description": "Install OpenCode agent definitions",
      "operations": [
        {
          "type": "copy_dir",
          "source": ".opencode/agents",
          "target": "agents",
          "description": "Install King Arthur and Gawain agents"
        }
      ]
    }
  }
}
